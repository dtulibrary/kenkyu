<div id="export" class="well tools">
  <ul class="list-unstyled">

    <li class="nav-header"><h4><%= t('kenkyu.tools.cite_and_export') %></h4></li>

    
    <% if (!@document.citation_styles.empty?) %>
      <li class="cite">
        <i class="icon-quote-right"></i>
        <%= link_to t('blacklight.tools.cite'), citation_catalog_path(:id => @document), {:id => 'citeLink', :name => 'citation', :class => 'lightboxLink'} %>
      </li>
    <% end %>

    <% if @document.export_formats.keys.include?( :bib ) %>
      <li class="bibtex">
        <i class="icon-file-text-o"></i> 
        <%= link_to t('kenkyu.tools.bibtex'), catalog_path(@document, :format => 'bib') %>
      </li>
    <% end %>

    <% if @document.export_formats.keys.include?( :ris ) %>
      <li class="endnote">
        <i class="icon-file-text-o"></i>
        <%= link_to t('kenkyu.tools.ris'), catalog_path(@document, :format => 'ris') %>
      </li>
    <% end %>

  </ul>
</div>
