<%= form_tag search_action_url, :method => :get, :class => 'search-query-form form-inline clearfix navbar-form' do %>
  <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8 )) %>
   <div class="text-field-with-icons">
    <div class="icons pull-right">
      <a title="Show search help" id="toggle-search-syntax" href="#"><i class="glyphicon glyphicon-question-sign"></i></a>
      <a title="Clear search field" id="search-clear" href="#"><i class="glyphicon glyphicon-remove-circle"></i></a>
   </div>
   
     <div class="input-group-btn">
     <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.q'), :class => "$", :id => "q", :autofocus => should_autofocus_on_search_box? %>    
   </div>
      <button type="submit" class="btn btn-primary search-btn" id="search">
        <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
        <span class="glyphicon glyphicon-search"></span>
      </button>
   </div>
<% end %>
<%= render 'catalog/search_help' %>
